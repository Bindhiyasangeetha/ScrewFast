---
const { productEntry } = Astro.props;
---

<div class="card-product">
  <h2>{productEntry.data.title}</h2>
  <p>{productEntry.data.description}</p>
  <a href={productEntry.url} class="read-more">Read More</a>
  <style>
    .card-product {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 16px;
      margin: 16px 0;
      text-align: center;
      transition: box-shadow 0.3s;
    }

    .card-product:hover {
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .read-more {
      display: inline-block;
      margin-top: 10px;
      padding: 8px 16px;
      background-color: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.3s;
    }

    .read-more:hover {
      background-color: #0056b3;
    }
  </style>
</div>
