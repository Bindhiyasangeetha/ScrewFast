---
const { query, handleSearch } = Astro.props;
let searchQuery = query;

function handleIconClick() {
  handleSearch(searchQuery);
}
---

<div class="relative w-full max-w-md mx-auto">
  <input
    type="text"
    placeholder="Search posts..."
    value={query}
    onInput={(e) => searchQuery = e.target.value}
    class="w-full p-4 pl-10 pr-6 text-sm bg-white border rounded-full shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500"
  />
  <svg
    class="absolute top-4 left-3 w-5 h-5 text-gray-400 cursor-pointer"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    onClick={handleIconClick}
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M21 21l-4.35-4.35M11 5a6 6 0 100 12 6 6 0 000-12z"
    />
  </svg>
</div>
