---
/* 
  index.astro
  Main landing page with various sections.
*/

// imports for layouts and sections
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";

// image imports
import heroImage from "@images/education-abroad.jpg";
import australiaImage from "@images/AIMAGE.webp"; 
import ukImage from "@images/ukimage.webp"; 
import usImage from "@images/usimage.webp"; 
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";


// Avatar sources
const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---
<MainLayout
  title="Home | Your Site"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://yourwebsite.com/",
    "url": "https://yourwebsite.com/",
    "name": "Home | Your Site",
    "description": "Welcome to Your Site, your gateway to higher education opportunities around the world.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://yourwebsite.com",
      "name": "Your Site",
      "description": "Explore top international education programs and resources to help you succeed in your academic journey."
    },
    "inLanguage": "en-US"
  }}
>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore Higher Education on GitHub"
    url="https://yourblog.com/higher-education-resources"
  />

  <HeroSection
    title="Explore Higher Education Opportunities"
    subTitle="Get expert guidance on studying abroad in top destinations around the world."
    primaryBtn="Start Exploring"
    primaryBtnURL="/products"
    secondaryBtn="Contact Education Consultant"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating="4.9"
    reviews="Based on 10k student reviews"
    src={heroImage}
    alt="Students exploring higher education opportunities"
  />

  <ClientsSection
    title="Trusted by Global Students"
    subTitle="Join thousands of students who have successfully pursued their dreams abroad."
  />

  <!-- Embedded Video Section -->
  <section class="video-section py-10">
    <h2 class="text-3xl font-bold text-center mb-6">Discover Higher Education Abroad</h2>
    <div class="video-wrapper mx-auto max-w-4xl">
      <iframe width="100%" height="400" src="https://www.youtube.com/embed/Ai3-EjBpuhs" title="Higher Education Abroad" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </section>

  <FeaturesGeneral
    title="Why Choose Us?"
    subTitle="We provide comprehensive support to help you navigate the complexities of studying abroad."
    alt="Features of studying abroad"
    features={features}
  />

  <FeaturesNavs
    title="Discover Higher Education in"
    tabs={[
      {
        heading: "Study in the US",
        content: "Explore top universities and scholarship opportunities in the United States.",
        svg: "usa",
        src: usImage,
        alt: "USA campus",
        first: true,
      },
      {
        heading: "Study in the UK",
        content: "Find out about prestigious universities and post-study work options in the UK.",
        svg: "uk",
        src: ukImage,
        alt: "UK university",
      },
      {
        heading: "Study in Australia",
        content: "Learn about world-class education and student life in Australia.",
        svg: "australia",
        src: australiaImage,
        alt: "Australia campus",
      },
    ]}
  />

  <TestimonialsSection
    title="Hear from Our Students"
    subTitle="Thousands of students have achieved their dreams with our guidance."
    testimonials={[
      {
        content: "Thanks to your services, I was able to secure admission to my dream university in the UK!",
        author: "John Doe",
        role: "Master's Student, University of London",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "50k+",
        description: "students successfully placed at universities worldwide",
      },
      {
        count: "95%",
        description: "student satisfaction rate with our services",
      },
      {
        count: "100+",
        description: "partner universities globally",
      },
    ]}
  />

  

  <FAQ title="Frequently<br />Asked Questions" faqs={faqs} />
</MainLayout>
