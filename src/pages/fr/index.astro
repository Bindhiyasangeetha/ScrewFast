---
/* 
  index.astro
  Page d'accueil principale avec diverses sections.
*/

// Imports pour les mises en page et les sections
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";

// Imports d'images
import heroImage from "@images/education-abroad.jpg";
import australiaImage from "@images/AIMAGE.webp"; 
import ukImage from "@images/ukimage.webp"; 
import usImage from "@images/usimage.webp"; 
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";

// Sources des avatars
const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---
<MainLayout
  title="Accueil | Votre Site"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://yourwebsite.com/",
    "url": "https://yourwebsite.com/",
    "name": "Accueil | Votre Site",
    "description": "Bienvenue sur Votre Site, votre passerelle vers les opportunités d'enseignement supérieur à travers le monde.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://yourwebsite.com",
      "name": "Votre Site",
      "description": "Découvrez les meilleurs programmes d'éducation internationale et les ressources pour vous aider à réussir votre parcours académique."
    },
    "inLanguage": "fr-FR"
  }}
>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explorez l'Enseignement Supérieur sur GitHub"
    url="https://yourblog.com/higher-education-resources"
  />

  <HeroSection
    title="Explorez les Opportunités d'Enseignement Supérieur"
    subTitle="Obtenez des conseils d'experts pour étudier à l'étranger dans les meilleures destinations du monde."
    primaryBtn="Commencer l'Exploration"
    primaryBtnURL="/products"
    secondaryBtn="Contacter un Consultant en Éducation"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating="4.9"
    reviews="Basé sur 10k avis d'étudiants"
    src={heroImage}
    alt="Étudiants explorant les opportunités d'enseignement supérieur"
  />

  <ClientsSection
    title="Fiable par les Étudiants du Monde Entier"
    subTitle="Rejoignez des milliers d'étudiants qui ont réalisé avec succès leurs rêves à l'étranger."
  />

  <!-- Section Vidéo Intégrée -->
  <section class="video-section py-10">
    <h2 class="text-3xl font-bold text-center mb-6">Découvrez l'Enseignement Supérieur à l'Étranger</h2>
    <div class="video-wrapper mx-auto max-w-4xl">
      <iframe width="100%" height="400" src="https://www.youtube.com/embed/Ai3-EjBpuhs" title="Enseignement Supérieur à l'Étranger" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </section>

  <FeaturesGeneral
    title="Pourquoi Nous Choisir ?"
    subTitle="Nous fournissons un soutien complet pour vous aider à naviguer dans les complexités de l'étude à l'étranger."
    alt="Caractéristiques de l'étude à l'étranger"
    features={features}
  />

  <FeaturesNavs
    title="Découvrez l'Enseignement Supérieur en"
    tabs={[
      {
        heading: "Étudier aux États-Unis",
        content: "Découvrez les meilleures universités et les opportunités de bourses aux États-Unis.",
        svg: "usa",
        src: usImage,
        alt: "Campus des États-Unis",
        first: true,
      },
      {
        heading: "Étudier au Royaume-Uni",
        content: "Découvrez les universités prestigieuses et les options de travail après les études au Royaume-Uni.",
        svg: "uk",
        src: ukImage,
        alt: "Université du Royaume-Uni",
      },
      {
        heading: "Étudier en Australie",
        content: "Découvrez une éducation de classe mondiale et la vie étudiante en Australie.",
        svg: "australia",
        src: australiaImage,
        alt: "Campus en Australie",
      },
    ]}
  />

  <TestimonialsSection
    title="Écoutez Nos Étudiants"
    subTitle="Des milliers d'étudiants ont réalisé leurs rêves grâce à nos conseils."
    testimonials={[
      {
        content: "Grâce à vos services, j'ai pu obtenir une admission dans l'université de mes rêves au Royaume-Uni !",
        author: "John Doe",
        role: "Étudiant en Master, Université de Londres",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "50k+",
        description: "étudiants placés avec succès dans des universités du monde entier",
      },
      {
        count: "95%",
        description: "taux de satisfaction des étudiants envers nos services",
      },
      {
        count: "100+",
        description: "universités partenaires dans le monde entier",
      },
    ]}
  />

  <FAQ title="Questions<br />Fréquemment Posées" faqs={faqs} />
</MainLayout>
