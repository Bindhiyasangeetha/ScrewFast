---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import campusLife from "@images/campus-life.avif";
import studyAbroad from "@images/study-abroad.avif";
import applicationProcess from "@images/application-process.avif";
import scholarships from "@images/scholarships.avif";
import careerOpportunities from "@images/career-opportunities.avif";
import studentNetworking from "@images/student-networking.avif";
import successfulAlumni from "@images/successful-alumni.avif";
import studyingInLibrary from "@images/studying-in-library.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Expert Guidance for Your Education Abroad Journey",
    subTitle:
      "Embarking on your journey to study abroad can feel overwhelming. With our professional consultation services, we guide you at every step, ensuring you make well-informed decisions. Whether you're seeking advice on the application process or selecting the right university, our experts are here to help.",
    single: false,
    imgOne: campusLife,
    imgOneAlt: "Vibrant campus life with students interacting.",
    imgTwo: studyAbroad,
    imgTwoAlt: "Student with a suitcase preparing to study abroad.",
  },
  {
    isRightSection: false,
    title: "Streamlining the Application Process",
    subTitle:
      "From gathering necessary documents to preparing a stellar application, we provide all the resources you need to streamline your application process. Our team ensures that you meet deadlines, present a strong application, and increase your chances of acceptance into top universities.",
    img: applicationProcess,
    imgAlt: "Application process checklist.",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "https://yourwebsite.com/application-process",
  },
  {
    isRightSection: true,
    title: "Navigating Scholarships and Financial Aid",
    subTitle:
      "Finding scholarships and financial aid opportunities can be a daunting task. We offer tailored guidance to help you explore various funding options and secure the financial assistance you need to pursue your education abroad.",
    single: false,
    imgOne: scholarships,
    imgOneAlt: "Scholarships form and documents.",
    imgTwo: studentNetworking,
    imgTwoAlt: "Students networking and discussing opportunities.",
  },
  {
    isRightSection: false,
    title: "Exploring Career Opportunities Post-Graduation",
    subTitle:
      "We help you explore career opportunities in your chosen field after completing your education. Our services include guidance on work visas, connecting with alumni, and building a strong resume that enhances your employability in your target country.",
    img: careerOpportunities,
    imgAlt: "Graduate exploring career opportunities.",
    btnExists: true,
    btnTitle: "Explore Careers",
    btnURL: "https://yourwebsite.com/career-opportunities",
  },
  {
    isRightSection: true,
    title: "Success Stories: Alumni Achievements",
    subTitle:
      "Our guidance doesn't stop at graduation. Many of our students have gone on to achieve remarkable success in their careers. Explore our alumni success stories and see how their education abroad helped shape their futures.",
    single: false,
    imgOne: successfulAlumni,
    imgOneAlt: "Successful alumni at a professional networking event.",
    imgTwo: studyingInLibrary,
    imgTwoAlt: "Student studying in a library, focused on academic growth.",
    btnExists: true,
    btnTitle: "Read More",
    btnURL: "https://yourwebsite.com/alumni-success",
  },
];
---

// Main Layout for the services page, including internationalization and structured data
<MainLayout
  title="Services | Higher Education Abroad"
  lang="en"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://yourwebsite.com/higher-education-abroad",
    url: "https://yourwebsite.com/higher-education-abroad",
    name: "Expert Guidance for Higher Education Abroad | YourWebsite",
    description:
      "Providing expert guidance and comprehensive solutions for students planning to study abroad, from consultation to post-graduation success.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://yourwebsite.com",
      name: "YourWebsite",
      description:
        "YourWebsite offers top-tier guidance and resources for students seeking higher education opportunities abroad, including application advice, financial aid, and career planning.",
    },
    inLanguage: "en",
    contactPoint: {
      "@type": "ContactPoint",
      email: "bindhiya0401@gmail.com",
      telephone: "+91-9876543213",
      contactType: "Customer Support",
      areaServed: "Worldwide",
    },
    author: {
      "@type": "Person",
      name: "Bindhiya J",
      email: "bindhiya0401@gmail.com",
      telephone: "+91-9876543213",
      affiliation: {
        "@type": "Organization",
        name: "YourWebsite",
        url: "https://yourwebsite.com",
      },
    },
  }}
>
  <!--MainSection: Introductory section of the page with a CTA button-->
  <MainSection
    title="Your Pathway to Global Education"
    subTitle="At YourWebsite, we're committed to providing comprehensive solutions and expert guidance to help you achieve your dream of studying abroad. From application assistance to post-graduation career advice, we support you every step of the way."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL={getRelativeLocaleUrl("en", "https://yourwebsite.com/contact")}
  />
  
  <!-- Alternating RightSection and LeftSection for different service descriptions -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <!-- FeaturesStats: Showcasing key metrics -->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to excellence is evident in every step of your educational journey. At YourWebsite, we pride ourselves on delivering top-tier support and guidance to help you achieve your goals abroad."
    mainStatTitle="98%"
    mainStatSubTitle="of our clients rate their study abroad experience as life-changing"
    stats={[
      {
        stat: "1000+",
        description: "successful student placements",
      },
      {
        stat: "20+",
        description: "partner universities worldwide",
      },
      {
        stat: "90%",
        description: "student visa approval rate",
      },
    ]}
  />
</MainLayout>
