---
// Importer les composants nécessaires
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Importer les images nécessaires
import ausImage from "@images/ausimage.jpeg";
import ukImage from "@images/ukimage.webp";
import usImage from "@images/usimage.webp";
import studentLife from "@images/student-life.jpeg"; // Exemple d'image supplémentaire
import scholarship from "@images/scholarship.png"; // Exemple d'image supplémentaire
import careerOpportunities from "@images/career-opportunities.png"; // Exemple d'image supplémentaire
import diverseCampus from "@images/diverse-campus.jpeg"; // Exemple d'image supplémentaire
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Explorer l'Éducation Supérieure en Australie",
    subTitle:
      "L'Australie est renommée pour ses universités de classe mondiale et sa vie étudiante dynamique. Avec des cours diversifiés et un environnement multiculturel, étudier ici offre une expérience unique. Découvrez le processus d'admission, les bourses et la vie de campus vibrante qui vous attendent.",
    single: false,
    imgOne: ausImage,
    imgOneAlt: "Campus universitaire australien.",
    imgTwo: studentLife,
    imgTwoAlt: "Étudiants profitant de la vie sur le campus.",
  },
  {
    isRightSection: false,
    title: "Naviguer dans le Système Éducatif du Royaume-Uni",
    subTitle:
      "Le Royaume-Uni abrite certaines des universités les plus anciennes et les plus prestigieuses du monde. Notre guide vous aide à comprendre les exigences de candidature, le coût de la vie et les opportunités pour les étudiants internationaux. Découvrez votre chemin vers l'étude au Royaume-Uni.",
    img: ukImage,
    imgAlt: "Bâtiment universitaire au Royaume-Uni.",
    btnExists: true,
    btnTitle: "En savoir plus",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Débloquer des Opportunités aux États-Unis",
    subTitle:
      "Étudier aux États-Unis ouvre des portes à des ressources éducatives vastes et à des opportunités de réseautage. Nous fournissons des informations sur la sélection des universités, les stratégies de candidature et les visas étudiants, garantissant que vous êtes bien préparé pour votre parcours.",
    single: false,
    imgOne: usImage,
    imgOneAlt: "Campus universitaire aux États-Unis.",
    imgTwo: careerOpportunities,
    imgTwoAlt: "Opportunités de carrière pour les diplômés.",
  },
  {
    isRightSection: false,
    title: "Bourses et Aides Financières",
    subTitle:
      "Les préoccupations financières ne doivent pas vous dissuader de poursuivre vos rêves. Nous vous fournissons des informations sur les bourses disponibles, les subventions et les options d'aide financière pour les étudiants internationaux en Australie, au Royaume-Uni et aux États-Unis.",
    img: scholarship,
    imgAlt: "Processus de demande de bourse.",
  },
  {
    isRightSection: true,
    title: "Expérience de Campus Diversifiée",
    subTitle:
      "Vivez la richesse des cultures diverses sur le campus. Étudier à l'étranger améliore non seulement votre expérience académique, mais élargit également votre vision du monde. Rejoignez une communauté d'étudiants issus de divers horizons et créez des liens pour la vie.",
    single: false,
    imgOne: diverseCampus,
    imgOneAlt: "Groupe d'étudiants diversifiés.",
    imgTwo: studentLife,
    imgTwoAlt: "Étudiants participant à des activités sur le campus.",
    btnExists: true,
    btnTitle: "Lire plus",
    btnURL: "#",
  },
];

const pageTitle: string = `Services d'Études à l'Étranger | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://yourblog.com/services-etudes-etranger",
    "url": "https://yourblog.com/services-etudes-etranger",
    "name": "Services d'Études à l'Étranger | Votre Blog",
    "description": "Votre guide pour les études à l'étranger, couvrant les opportunités, les options de bourses et la vie étudiante en Australie, au Royaume-Uni et aux États-Unis.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://yourblog.com",
      "name": "Votre Blog",
      "description": "Votre ressource complète pour les études à l'étranger."
    },
    "inLanguage": "fr-FR"
  }}
>
  <!--MainSection est la section introductive de la page, elle contient également un bouton CTA-->
  <MainSection
    title="Explorez Votre Avenir avec les Études à l'Étranger"
    subTitle="Découvrez les vastes opportunités qui vous attendent en Australie, au Royaume-Uni et aux États-Unis. Nos experts vous guideront dans le processus d'admission, les bourses et la vie étudiante."
    btnExists={true}
    btnTitle="Planifiez une Consultation"
    btnURL="#"
  />
  
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  
  <!--La section FeaturesStats présente des statistiques essentielles précieuses pour les utilisateurs-->
  <FeaturesStats
    title="Par les Chiffres"
    subTitle="Notre engagement à fournir des informations précises et fiables se reflète dans les statistiques suivantes."
    mainStatTitle="95%"
    mainStatSubTitle="de nos clients s'inscrivent avec succès dans les programmes de leur choix."
    stats={[
      {
        stat: "1,000+",
        description: "étudiants guidés chaque année.",
      },
      {
        stat: "200+",
        description: "options de bourses disponibles.",
      },
      {
        stat: "90%",
        description: "taux de satisfaction de nos clients.",
      },
    ]}
  />
</MainLayout>
