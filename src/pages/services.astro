---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import ausImage from "@images/ausimage.jpeg";
import ukImage from "@images/ukimage.webp";
import usImage from "@images/usimage.webp";
import studentLife from "@images/student-life.jpeg"; // Example of additional image
import scholarship from "@images/scholarship.png"; // Example of additional image
import careerOpportunities from "@images/career-opportunities.png"; // Example of additional image
import diverseCampus from "@images/diverse-campus.jpeg"; // Example of additional image
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Exploring Higher Education in Australia",
    subTitle:
      "Australia is renowned for its world-class universities and vibrant student life. With diverse courses and a multicultural environment, studying here offers a unique experience. Learn about the admission process, scholarships, and the vibrant campus life that awaits you.",
    single: false,
    imgOne: ausImage,
    imgOneAlt: "Australian university campus.",
    imgTwo: studentLife,
    imgTwoAlt: "Students enjoying life on campus.",
  },
  {
    isRightSection: false,
    title: "Navigating the UK Education System",
    subTitle:
      "The UK is home to some of the oldest and most prestigious universities in the world. Our guidance helps you understand the application requirements, living costs, and opportunities for international students. Discover your path to studying in the UK.",
    img: ukImage,
    imgAlt: "UK university building.",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Unlocking Opportunities in the US",
    subTitle:
      "Studying in the US opens doors to vast educational resources and networking opportunities. We provide insights into university selection, application strategies, and student visas, ensuring you are well-prepared for your journey.",
    single: false,
    imgOne: usImage,
    imgOneAlt: "US university campus.",
    imgTwo: careerOpportunities,
    imgTwoAlt: "Career opportunities for graduates.",
  },
  {
    isRightSection: false,
    title: "Scholarships and Financial Aid",
    subTitle:
      "Financial concerns shouldn't deter you from pursuing your dreams. We provide information on available scholarships, grants, and financial aid options for international students in Australia, the UK, and the US.",
    img: scholarship,
    imgAlt: "Scholarship application process.",
  },
  {
    isRightSection: true,
    title: "Diverse Campus Experience",
    subTitle:
      "Experience the richness of diverse cultures on campus. Studying abroad not only enhances your academic experience but also broadens your worldview. Join a community of students from various backgrounds and make lifelong connections.",
    single: false,
    imgOne: diverseCampus,
    imgOneAlt: "Diverse group of students.",
    imgTwo: studentLife,
    imgTwoAlt: "Students participating in campus activities.",
    btnExists: true,
    btnTitle: "Read More",
    btnURL: "#",
  },
];

const pageTitle: string = `Study Abroad Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://yourblog.com/study-abroad-services",
    "url": "https://yourblog.com/study-abroad-services",
    "name": "Study Abroad Services | Your Blog",
    "description": "Your guide to higher education abroad, covering opportunities, scholarship options, and student life in Australia, the UK, and the US.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://yourblog.com",
      "name": "Your Blog",
      "description": "Your comprehensive resource for higher education abroad."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Explore Your Future with Higher Education Abroad"
    subTitle="Discover the vast opportunities that await you in Australia, the UK, and the US. Our expert guidance will help you navigate the admission process, scholarships, and student life."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to providing accurate and reliable information is reflected in the following stats."
    mainStatTitle="95%"
    mainStatSubTitle="of our clients successfully enroll in their desired programs."
    stats={[
      {
        stat: "1,000+",
        description: "students guided each year.",
      },
      {
        stat: "200+",
        description: "scholarship options available.",
      },
      {
        stat: "90%",
        description: "satisfaction rate from our clients.",
      },
    ]}
  />
</MainLayout>
